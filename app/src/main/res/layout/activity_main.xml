<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_msg"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POPULAR MOVIES"
        android:id="@+id/popmovButton"
        android:singleLine="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="59dp"
        android:layout_alignStart="@+id/stockButton"
        android:layout_alignEnd="@+id/stockButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOCK HAWK"
        android:id="@+id/stockButton"
        android:layout_below="@+id/popmovButton"
        android:layout_alignStart="@+id/biggerButton"
        android:layout_alignEnd="@+id/biggerButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/biggerButton"
        android:layout_below="@+id/stockButton"
        android:layout_alignStart="@+id/materialButton"
        android:layout_alignEnd="@+id/materialButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKE YOUR APP MATERIAL"
        android:id="@+id/materialButton"
        android:layout_below="@+id/biggerButton"
        android:layout_alignEnd="@+id/textView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO UBIQUITOUS"
        android:id="@+id/ubiquitousButton"
        android:layout_below="@+id/materialButton"
        android:layout_alignEnd="@+id/materialButton"
        android:layout_alignStart="@+id/materialButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/capstoneButton"
        android:layout_below="@+id/ubiquitousButton"
        android:layout_alignEnd="@+id/ubiquitousButton"
        android:layout_alignStart="@+id/ubiquitousButton"/>
</RelativeLayout>
